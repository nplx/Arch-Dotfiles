###################################
##    My <.conkyrc> 2012
##    Based on URIEL1998's code
###################################

#avoid flickr
double_buffer yes
no_buffers yes

#own window
own_window yes
own_window_transparent no
#own_window_type normal
#own_window_type panel
own_window_type desktop
#own_window_type override
#own_window_type dock
own_window_hints undecorate,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes

net_avg_samples 2
cpu_avg_samples 2
#net_avg_samples 3
#cpu_avg_samples 3

#borders
draw_borders no
border_width 0

#shades
draw_shades no
draw_outline no

#position
gap_x 0
gap_y 5
alignment bl

#behaviour
update_interval 1
#update_interval_on_battery
total_run_times 0

#color
default_color ffffff
#default_shade_color 000000
#own_window_color 000000
color0 4774a7
color1 f2f2f2
color2 a3c2e1

#font
use_xft yes
xftfont ProggyTinyTT

#force UTF8
override_utf8_locale yes

#to prevent window from moving
use_spacer right
minimum_size 1024

#listen to MPD
mpd_host 127.0.0.1
mpd_port 6600

