!!------------X11 Mouse Theme------------
Xcursor.theme:                   Vanilla-DMZ-AA
!!------------Xft------------------------
Xft.dpi:96
Xft.hinting:                     1
Xft.hintstyle:                   hintful
Xft.antialias:                   1
Xft.rgba:                        rgb

*foreground:     #DDDDDD
*background:     #121212
!black
*color0:         #353535
*color8:         #666666
!red
*color1:         #AE4747
*color9:         #EE6363
!green
*color2:         #556B2F
*color10:        #9ACD32
!brown/yellow
*color3:         #DAA520
*color11:        #FFC125
!blue
*color4:         #6F99B4
*color12:        #7C96B0
!magenta
*color5:         #8B7B8B
*color13:        #D8BFD8
!cyan
*color6:         #A7A15E
*color14:        #F0E68C
!white
*color7:         #DDDDDD
*color15:        #FFFFFF

! URxvt ------------------------------------
!URxvt.saveLines:   3000
URxvt.saveLines:   500
URxvt.termName: rxvt-unicode

URxvt.font:xft:Envy Code R:size=10:regular,xft:WenQuanYi Bitmap Song:size=9:regular
URxvt.boldFont:xft:Envy Code R:size=10:bold,xft:WenQuanYi Bitmap Song:size=9:bold
URxvt.italicFont:xft:Envy Code R:size=10:italic,xft:WenQuanYi Bitmap Song:size=9:italic
!URxvt.font:              xft:DejaVu LGC Sans Mono:size=10:book
!URxvt.boldFont:          xft:DejaVu LGC Sans Mono:size=10:bold
!URxvt.italicFont:        xft:DejaVu LGC Sans Mono:size=10:oblique

urxvt*geometry:                  72x25
urxvt*inputMethod:               ibus
urxvt*depth:                     32
urxvt*scrollBar:                 false
urxvt*borderLess:                false
urxvt*matcher.button:            1
urxvt*cursorBlink:               true
urxvt*cursorColor:               #258aef
urxvt*allow_bold:                true
urxvt*internalBorder:            10
!!urxvt*inheritPixmap:             true
!!urxvt*tintColor:                 #
urxvt*shading:                   100
!!urxvt*fading:                    0
!!urxvt*fadeColor:                 #222222
urxvt*urgentOnBell:              true

!!------------Clickable------------------
!!URxvt.perl-ext-common: default,matcher
URxvt.urlLauncher: w3m
!!URxvt.matcher.button: 2
URxvt.matcher.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]
!! Colors

!!------------xterm----------------
!look and feel
xterm.termName: xterm-256color
xterm.geometry: 72x36
xterm*scrollBar: false
xterm*rightScrollBar: true
xterm*loginshell: true
xterm*cursorBlink: true
xterm*background:  black
xterm*foreground:  gray
xterm.borderLess: true
xterm.cursorBlink: true
xterm*colorUL: yellow
xterm*colorBD: white

!fix alt key input 
!xterm*eightBitInput: false
!xterm*altSendsEscape: true

!font and locale
xterm*locale: true
xterm.utf8:     true
xterm*utf8Title: true
xterm*fontMenu*fontdefault*Label: Default
!xterm*faceName: Monaco:antialias=True:pixelsize=10
!xterm*faceName: AR PL Uming CN:pixelsize=12
xterm*faceName: DejaVu Sans Mono:antialias=True:pixelsize=11
xterm*boldFont: DejaVu Sans Mono:style=Bold:pixelsize=11
xterm*faceNameDoublesize: DejaVu Sans Mono:antialias=True:pixelsize=18
xterm*xftAntialias: true
!xterm*cjkWidth:false
!xterm*preeditType:Root

! Emacs settings -----------------------------------
Emacs.geometry: 98x47+0+0
!Emacs.cursorColor: yellow
Emacs.borderWidth: 0
Emacs.internalBorder: 0
!Emacs.background: black
!Emacs.foreground: white
!Emacs.pointerColor: yellow
Emacs.borderColor: black
Emacs.mode-line.attributeBackground: black
Emacs.mode-line.attributeForeground: white
